<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="kg_pager.class">KG\Page\Pager</parameter>
        <parameter key="kg_pager.invalid_page_redirector.class">KG\Bundle\PagerBundle\EventListener\InvalidPageRedirector</parameter>

    </parameters>

    <services>

        <!-- Main paging service -->
        <service id="kg_pager" class="%kg_pager.class%"></service>

        <!-- Removed by default, only left if explicitly enabled -->
        <service id="kg_pager.invalid_page_redirector" class="%kg_pager.invalid_page_redirector.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <!-- first argument MAY be set by configuration -->
        </service>

    </services>
</container>
