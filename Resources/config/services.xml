<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="kg_pager.array.class">KG\Bundle\PagerBundle\Pager\ArrayPager</parameter>
        <parameter key="kg_pager.composite.class">KG\Bundle\PagerBundle\Pager\CompositePager</parameter>
        <parameter key="kg_pager.dql.provider.class">KG\Bundle\PagerBundle\Result\Provider\DQLProvider</parameter>
        <parameter key="kg_pager.dql.target.class">Doctrine\ORM\Query</parameter>
        <parameter key="kg_pager.generic.class">KG\Bundle\PagerBundle\Pager\GenericPager</parameter>
        <parameter key="kg_pager.doctrine_dbal_qb.class">KG\Bundle\PagerBundle\Pager\Doctrine\DBALQueryBuilderPager</parameter>
        <parameter key="kg_pager.doctrine_orm.class">KG\Bundle\PagerBundle\Pager\Doctrine\ORMPager</parameter>
        <parameter key="kg_pager.invalid_page_redirector.class">KG\Bundle\PagerBundle\EventListener\InvalidPageRedirector</parameter>
        <parameter key="kg_pager.qb.dbal.provider.class">KG\Bundle\PagerBundle\Result\Provider\DBALQueryBuilderProvider</parameter>
        <parameter key="kg_pager.qb.dbal.target.class">Doctrine\DBAL\Query\QueryBuilder</parameter>
        <parameter key="kg_pager.qb.orm.provider.class">KG\Bundle\PagerBundle\Result\Provider\ORMQueryBuilderProvider</parameter>
        <parameter key="kg_pager.qb.orm.target.class">Doctrine\ORM\QueryBuilder</parameter>

    </parameters>

    <services>

        <!-- Main paging service -->
        <service id="kg_pager" class="%kg_pager.composite.class%">
            <argument type="collection">
                <argument type="service" id="kg_pager.doctrine_orm" />
                <argument type="service" id="kg_pager.doctrine_dbal_qb" />
                <argument type="service" id="kg_pager.array" />
            </argument>
        </service>

        <!-- ORM pager -->
        <service id="kg_pager.doctrine_orm" class="%kg_pager.doctrine_orm.class%" />

        <!-- ORM QueryBuilder pager -->
        <service id="kg_pager.qb.orm" alias="kg_pager.doctrine_orm" />

        <!-- DBAL QueryBuilder pager -->
        <service id="kg_pager.doctrine_dbal_qb" class="%kg_pager.doctrine_dbal_qb.class%" />

        <service id="kg_pager.array" class="%kg_pager.array.class%" />

        <!-- Removed by default, only left if explicitly enabled -->
        <service id="kg_pager.invalid_page_redirector" class="%kg_pager.invalid_page_redirector.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <!-- first argument MAY be set by configuration -->
        </service>

    </services>
</container>
